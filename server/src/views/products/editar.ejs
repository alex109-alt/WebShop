<%- include('../header'); %>


<div class="col-12">
    <h1>Editar Producto</h1>

    <form method="post" action="/products/actualizar">

        <input value="<%= productos.id %>" name="id" type="hidden">

        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= productos.nombre %>" required id="nombre" placeholder="Nombre del producto" class="form-control" type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="precio">Precio</label>
            <input value="<%= productos.precio %>" required id="precio" placeholder="Precio del producto" class="form-control" type="text" name="precio">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/products" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
