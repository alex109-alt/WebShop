<%- include("../header"); %>
<div class="col-12">
    <h1>Productos</h1>
    <a href="/products/agregar" class="btn btn-primary mb-2"> Agregar </a>
    <table class="table table-bordered">
        <thead>
            <tr>
               <!-- <th>Id</th> -->
                <th>Nombre</th>
                <th>Precio</th>
                <th>Editar</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            <% productos.forEach(productos => {%>
            <tr>
               <!-- <th><%= productos.id %></th> -->
                <td><%= productos.nombre %></td>
                <td><%= productos.precio %></td>
                <td><a href="/products/editar/<%= productos.id %>" class="btn btn-warning">Editar</a></td>
                <td><a href="/products/eliminar/<%= productos.id %>" class="btn btn-danger">Eliminar</a></td>

            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include('../footer'); %>
